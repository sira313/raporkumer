{
	"name": "rapkumer",
	"private": true,
	"version": "0.3.2",
	"type": "module",
	"scripts": {
		"db:push": "node scripts/fix-drizzle-indexes.mjs && drizzle-kit push && node scripts/fix-drizzle-indexes.mjs && node scripts/grant-admin-permissions.mjs && node scripts/notify-server-reload.mjs",
		"seed:walis": "node scripts/seed-wali-users.mjs",
		"db:studio": "drizzle-kit studio",
		"db:cleanup": "node scripts/cleanup-orphans.mjs",
		"dev": "node scripts/dev.js",
		"build": "vite build",
		"preview": "vite preview",
		"package:win": "powershell -NoProfile -ExecutionPolicy Bypass -File installer/prepare-windows.ps1",
		"package:win:installer": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"& 'C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe' 'installer/raporkumer.iss'\"",
		"sign:executables": "powershell -NoProfile -ExecutionPolicy Bypass -File installer/scripts/sign-files.ps1 -SignExecutables",
		"sign:installer": "powershell -NoProfile -ExecutionPolicy Bypass -File installer/scripts/sign-files.ps1 -SignInstaller",
		"sign:verify": "powershell -NoProfile -ExecutionPolicy Bypass -File installer/scripts/sign-files.ps1 -VerifyOnly -SignExecutables -SignInstaller",
		"sign:setup": "powershell -NoProfile -ExecutionPolicy Bypass -File installer/scripts/setup-signing.ps1 -Setup",
		"sign:create-cert": "powershell -NoProfile -ExecutionPolicy Bypass -File installer/scripts/setup-signing.ps1 -CreateSelfSigned",
		"sign:create-cert:force": "powershell -NoProfile -ExecutionPolicy Bypass -File installer/scripts/setup-signing.ps1 -CreateSelfSigned -Force",
		"prepare": "svelte-kit sync || echo ''",
		"version": "node scripts/update-version.mjs",
		"check": "svelte-kit sync && node scripts/svelte-check-wrapper.mjs",
		"check:watch": "svelte-kit sync && node scripts/svelte-check-wrapper.mjs --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"prod": "rm data/*.sqlite3 && pnpm db:push && pnpm build && pnpm package:win && pnpm package:win:installer",
		"prod:signed": "rm data/*.sqlite3 && pnpm db:push && pnpm build && pnpm package:win && pnpm sign:executables && pnpm package:win:installer && pnpm sign:installer"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.0",
		"daisyui": "^5.1.25",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"mdsvex": "^0.12.6",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vite-plugin-devtools-json": "^0.2.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"@tailwindcss/oxide"
		]
	},
	"dependencies": {
		"@libsql/client": "^0.15.9",
		"drizzle-orm": "^0.44.2",
		"xlsx": "^0.18.5"
	}
}
